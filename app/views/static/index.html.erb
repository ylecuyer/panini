<div class="container">
  <% (0..9).each do |car| %>
    <%= "</div>".html_safe if car%3 == 0 && car != 0 %>
    <%= "<div class=\"columns\">".html_safe if car%3 == 0 %>
    <div class="column">
      <%= link_to car_path(car) do %>
      <div class="card"> 
        <figure class="card-image">
          <img src="http://placehold.it/300x225?text=<%= "%03d" % car %>" alt="" onmouseover="hover(this)" onmouseout="unhover(this, '<%= "%03d" % car %>')">
        </figure>
        <div class="card-content">
          <div class="content">
            <small>11:09 PM - 1 Jan 2016</small>
          </div>
        </div>
      </div>
    <% end %>
    </div>
  <% end %>
  </div>
</div>

<script type="text/javascript">
function hover(elt) {
  elt.src = "http://placehold.it/300x225?text=%2B";
  elt.style.opacity = 1;
}

function unhover(elt, text) {
  elt.src = "http://placehold.it/300x225?text="+text;
  elt.style.opacity = 0.4;
}
</script>
